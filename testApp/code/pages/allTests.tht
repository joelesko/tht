fn main {

    $test = Test()

    $test = run($test)

    Output.sendHtml(html($test.resultsHtml()))
}

fn isPerfMode {
    return Input.get('perf', 'b')
}

tm html($results) {

    <!-- this is a comment -->
    <html>
        <head>
          <title> THT Unit Tests
          <link rel="stylesheet" href="/css/base.css">
        </>
        <body>
            <main>
