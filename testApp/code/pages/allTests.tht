    $longFn = 'fn tooManyArgs($a1, $a2, $a3, $a4, $a5) { }'
    $t.parserError($longFn, 'Can not have more than 4 arguments')

    $t.section('Parser Errors - Names')

    $t.parserError('$FOO = 3',        'camelCase')
    $t.parserError('$fOO = 3',        'camelCase')
