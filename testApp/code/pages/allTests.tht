    $t.ok($sUrl.contains('?test=123&foo=a%20b'), 'query add')

    $relUrl = url'/path/page'
    $t.ok(!$relUrl.isAbsolute(), 'isAbsolute = false')
    $t.ok($relUrl.isRelative(), 'isRelative = true')

